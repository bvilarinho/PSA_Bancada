-- Database: BancadaDiagnostico

-- DROP DATABASE IF EXISTS "BancadaDiagnostico";

CREATE DATABASE "BancadaDiagnostico"
    WITH 
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'en_US.UTF-8'
    LC_CTYPE = 'en_US.UTF-8'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;
	
create table sensor (
	id_sensor int not null,
	nome varchar(50),
	unidades varchar(50),
	dia timestamp(0) default current_timestamp,
	primary key(id_sensor)
)

create table maquinas(
	id_maq int not null,
	nome varchar(50),
	dia timestamp(0) default current_timestamp,
	primary key(id_maq)
)

